<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_checked="false">
    <inset android:insetRight="-2dp">
      <shape android:shape="rectangle">
        <padding android:bottom="@dimen/catalog_facet_tab_padding_bottom"
          android:left="@dimen/catalog_facet_tab_padding_left"
          android:right="@dimen/catalog_facet_tab_padding_right"
          android:top="@dimen/catalog_facet_tab_padding_top" />
        <solid android:color="?attr/simplifiedColorBackground" />
        <stroke android:width="@dimen/catalog_facet_tab_stroke"
          android:color="?attr/colorPrimary" />
      </shape>
    </inset>
  </item>

  <item android:state_checked="true">
    <inset android:insetRight="-2dp">
      <shape android:shape="rectangle">
        <padding android:bottom="@dimen/catalog_facet_tab_padding_bottom"
          android:left="@dimen/catalog_facet_tab_padding_left"
          android:right="@dimen/catalog_facet_tab_padding_right"
          android:top="@dimen/catalog_facet_tab_padding_top" />
        <solid android:color="?attr/colorPrimary" />
        <stroke android:width="@dimen/catalog_facet_tab_stroke"
          android:color="?attr/colorPrimary" />
      </shape>
    </inset>
  </item>

</selector>