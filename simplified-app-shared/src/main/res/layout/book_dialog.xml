<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/book_dialog"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <TextView android:id="@+id/book_debug_status"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:text="STATUS"
    android:visibility="gone" />

  <LinearLayout android:id="@+id/book_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:minHeight="160dp"
    android:orientation="horizontal">

    <!-- The width of this layout is set at run-time based on the size of the book cover -->
    <RelativeLayout android:id="@+id/book_header_left"
      android:layout_width="wrap_content"
      android:layout_height="200dp"
      android:orientation="vertical">

      <ImageView android:id="@+id/book_header_cover"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/empty" />
    </RelativeLayout>

    <RelativeLayout android:id="@+id/book_header_right"
      android:layout_width="wrap_content"
      android:layout_height="match_parent">

      <TextView android:id="@+id/book_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/placeholder_long_title"
        android:textSize="18sp"
        android:textStyle="bold" />

      <TextView android:id="@+id/book_header_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_header_title"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="FORMAT FORMAT FORMAT FORMAT" />

      <TextView android:id="@+id/book_header_authors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_header_format"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:inputType="textMultiLine|textNoSuggestions"
        android:maxLines="2"
        android:minLines="1"
        android:text="@string/placeholder_long_author" />

      <LinearLayout android:id="@+id/book_dialog_downloading_failed_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:gravity="left"
        android:orientation="horizontal">

        <Button android:id="@+id/book_dialog_downloading_failed_retry"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/button_standard_height"
          android:layout_weight="1"
          android:text="@string/catalog_book_error_retry"
          android:textSize="12sp" />

        <Button android:id="@+id/book_dialog_downloading_failed_dismiss"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/button_standard_height"
          android:layout_marginLeft="12dp"
          android:layout_weight="1"
          android:text="@string/catalog_book_error_dismiss"
          android:textSize="12sp" />
      </LinearLayout>

      <Button android:id="@+id/book_dialog_downloading_cancel"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_standard_height"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="8dp"
        android:text="@string/catalog_cancel_downloading"
        android:textSize="12sp" />

      <LinearLayout android:id="@+id/book_dialog_download_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- This button will actually be removed at run-time, it is here -->
        <!-- for the purposes of checking the layout in the GUI editor. -->
        <Button android:layout_width="wrap_content"
          android:layout_height="@dimen/button_standard_height"
          android:text="@string/catalog_book_borrow"
          android:textSize="12sp" />
      </LinearLayout>
    </RelativeLayout>
  </LinearLayout>

  <FrameLayout android:layout_width="match_parent"
    android:layout_height="50dp">

    <include layout="@layout/book_dialog_downloading"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="visible" />

    <include layout="@layout/book_dialog_downloading_failed"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="visible" />

    <include layout="@layout/book_dialog_download"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="visible" />
  </FrameLayout>

  <LinearLayout android:id="@+id/book_summary_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView android:id="@+id/book_summary_section_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:text="@string/catalog_book_summary_publisher"
      tools:text="Description" />

    <WebView android:id="@+id/book_summary_text"
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:layout_marginBottom="16dp" />

    <Button android:id="@+id/book_summary_read_more_button"
      android:layout_width="match_parent"
      android:layout_height="@dimen/button_standard_height"
      android:background="@android:color/transparent"
      android:gravity="end|center_vertical"
      android:paddingEnd="6dp"
      android:text="@string/book_summary_read_more"
      android:textSize="12sp" />

    <View android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_marginTop="16dp"
      android:background="@android:color/darker_gray" />

    <TextView android:id="@+id/book_header_meta"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="10dp"
      android:ellipsize="end"
      android:inputType="textMultiLine|textNoSuggestions"
      android:maxLines="8"
      android:minLines="1"
      android:text="@string/placeholder_lorem" />

    <View android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_marginTop="16dp"
      android:background="@android:color/darker_gray" />
  </LinearLayout>

  <LinearLayout android:id="@+id/book_related_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:visibility="gone">

    <Button android:id="@+id/related_books_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@android:color/transparent"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:text="@string/catalog_detail_related"
      android:textAppearance="?android:attr/textAppearanceMedium" />

    <View android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="10dp"
      android:layout_marginRight="6dp"
      android:background="@android:color/darker_gray" />
  </LinearLayout>

  <Button android:id="@+id/book_dialog_report_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@android:color/transparent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:text="@string/catalog_book_report"
    android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>
