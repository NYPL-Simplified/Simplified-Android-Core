<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/book_dialog_download"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="?attr/notification_background"
    android:orientation="vertical">

    <TextView
      android:id="@+id/book_dialog_download_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:maxLines="1"
      android:ellipsize="end"
      android:text="@string/catalog_book_availability_open_access"
      android:textSize="14sp"
      android:textColor="@color/notification_foreground" />
  </LinearLayout>
</RelativeLayout>
