<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/book_dialog_downloading"
  android:layout_width="match_parent"
  android:layout_height="@dimen/bookDialogDownloadingHeight"
  android:background="?attr/simplifiedColorPrimary"
  android:padding="16dp">

  <ProgressBar
    android:id="@+id/book_dialog_downloading_progress"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="wrap_content"
    android:layout_height="16dp"
    android:layout_marginRight="16dp"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_toLeftOf="@id/book_dialog_downloading_percent_text"
    android:progress="50" />

  <TextView
    android:id="@+id/book_dialog_downloading_percent_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:text=""
    android:fontFamily="monospace"
    android:textColor="?attr/simplifiedColorBackground"
    android:textSize="12sp" />

</RelativeLayout>
