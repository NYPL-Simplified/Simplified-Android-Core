<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/book_dialog_downloading_failed"
  android:layout_width="match_parent"
  android:layout_height="@dimen/bookDialogDownloadingHeight"
  android:background="?attr/simplifiedColorPrimary"
  android:orientation="vertical"
  android:padding="16dp">

  <TextView
    android:id="@+id/book_dialog_downloading_failed_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:gravity="center"
    android:ellipsize="end"
    android:maxLines="2"
    android:text="@string/catalog_download_failed"
    android:textSize="16sp"
    android:textColor="#fff" />

</RelativeLayout>
