<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/profile_time_out_dialog"
  android:layout_width="@dimen/profile_time_out_dialog_width"
  android:layout_height="@dimen/profile_time_out_dialog_height"
  android:gravity="center"
  android:background="@color/normal_background"
  android:padding="16dp">

  <ImageView
      android:id="@+id/profile_time_out_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:src="@drawable/clock_icon"/>

  <TextView
    android:id="@+id/profile_time_out_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/profile_time_out_icon"
    android:gravity="center"
    android:text="@string/profiles_time_out_soon" />

</RelativeLayout>