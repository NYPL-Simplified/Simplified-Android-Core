<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="8dp"
  android:orientation="horizontal"
  android:padding="8dp"
  android:weightSum="1">

  <LinearLayout android:id="@+id/profileItemIconLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <ImageView android:id="@+id/profileItemIcon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:src="@drawable/ic_face_black_24dp" />
  </LinearLayout>

  <TextView android:id="@+id/profileItemDisplayName"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_toRightOf="@+id/profileItemIconLayout"
    android:gravity="center_vertical"
    android:paddingLeft="16dp"
    android:text="Item"
    android:textAppearance="?android:attr/textAppearanceListItem"
    android:textColor="@drawable/drawer_list_text_selector"
    android:textSize="18sp"
    android:textStyle="bold" />

</RelativeLayout>
