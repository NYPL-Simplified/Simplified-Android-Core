<?xml version="1.0" encoding="utf-8"?>

<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
      android:id="@+id/settings_login_title"
      android:text="@string/settings_login_title"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TableLayout
      android:id="@+id/settings_login_table"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="16dp">

      <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
          android:id="@+id/settings_barcode_label"
          android:labelFor="@+id/settings_barcode_edit"
          android:text="@string/settings_barcode"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

        <EditText
          android:id="@+id/settings_barcode_edit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginStart="16dp"
          android:inputType="textNoSuggestions"
          android:maxLength="14"
          android:maxLines="1"/>
      </TableRow>
      <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
          android:id="@+id/settings_pin_label"
          android:labelFor="@+id/settings_pin_edit"
          android:text="@string/settings_pin"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

        <EditText
          android:id="@+id/settings_pin_edit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginStart="16dp"
          android:inputType="textNoSuggestions"
          android:maxLength="16"
          android:maxLines="1"/>

        <CheckBox
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:textSize="12dp"
          android:text="@string/settings_reveal_password"
          android:id="@+id/settings_reveal_password"/>
      </TableRow>
    </TableLayout>

    <Button
      android:id="@+id/settings_login"
      android:background="@drawable/simplified_button"
      android:layout_gravity="start"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/button_standard_height"
      android:textColor="@drawable/simplified_button_text"
      android:textSize="12sp"
      android:text="@string/settings_log_in"/>

    <View
      android:background="#eee"
      android:id="@+id/settings_login_divider"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginBottom="16dp"
      android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/settings_about"
        android:text="@string/settings_about"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="#eee"
        android:id="@+id/settings_about_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp" />

    <TextView
      android:id="@+id/settings_credits"
      android:text="@string/settings_credits"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <View
      android:background="#eee"
      android:id="@+id/settings_credits_divider"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginBottom="16dp"
      android:layout_marginTop="16dp"/>

    <TextView
      android:id="@+id/settings_eula"
      android:text="@string/settings_eula"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <View
      android:background="#eee"
      android:id="@+id/settings_eula_divider"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginBottom="16dp"
      android:layout_marginTop="16dp"/>

    <TextView
      android:id="@+id/settings_privacy"
      android:text="@string/settings_privacy"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <View
      android:background="#eee"
      android:id="@+id/settings_privacy_divider"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginBottom="16dp"
      android:layout_marginTop="16dp"/>

    <TextView
      android:id="@+id/settings_help"
      android:text="@string/help"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="gone"/>

    <View
      android:background="#eee"
      android:id="@+id/settings_help_divider"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginBottom="16dp"
      android:layout_marginTop="16dp"
      android:visibility="gone"/>

    <TextView
      android:id="@+id/settings_adobe_accounts"
      android:text="@string/settings_adobe_accounts"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <View
      android:background="#eee"
      android:id="@+id/settings_adobe_accounts_divider"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginBottom="16dp"
      android:layout_marginTop="16dp"
      android:visibility="visible"/>

    <TextView
      android:id="@+id/settings_alt_uris"
      android:text="@string/settings_alt_uris"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="visible"/>
  </LinearLayout>

</ScrollView>

