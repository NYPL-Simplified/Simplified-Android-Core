<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- The configurable application name -->
  <string name="feature_app_name">Simply\uFEFFE</string>

  <!-- If true, then "My Books" will show books from all of the collections. -->
  <bool name="featureShowAllCollectionsInMyBooks">true</bool>

  <!-- If true, the application presents selectable profiles. -->
  <bool name="feature_profiles_enabled">false</bool>

  <!-- If true, a Holds tab is shown. -->
  <!-- This can be disabled for book collections that do not have holds. -->
  <bool name="feature_holds_enabled">true</bool>

  <!-- If a non-empty email address is supplied here, it will be used as the
       target of migration reports -->
  <string name="feature_migration_report_email"></string>

  <!-- A non-empty string here will override the package name given to
       the Adobe DRM implementation. An empty string will cause the
        implementation to use the package name defined in the Android manifest. -->
  <string name="feature_adobe_package_override">org.nypl.simplified.app</string>

</resources>
