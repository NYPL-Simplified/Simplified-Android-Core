<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style
    name="SimplifiedTheme"
    parent="android:Theme.Holo.Light">
    <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
    <item name="android:icon">@drawable/ic_menu</item>
    <item name="button_foreground">@color/app_main_color</item>
    <item name="list_item_foreground">@color/app_main_color</item>
    <item name="downloading_background">@color/app_main_color</item>
    <item name="notification_background">@color/app_main_color</item>
    <item name="main_color">@color/app_main_color</item>

  </style>


  <style
    name="SimplifiedTheme_NYPL" parent="SimplifiedTheme">

    <item name="button_foreground">@color/feature_main_color_nypl</item>
    <item name="list_item_foreground">@color/feature_main_color_nypl</item>
    <item name="downloading_background">@color/feature_main_color_nypl</item>
    <item name="notification_background">@color/feature_main_color_nypl</item>
    <item name="main_color">@color/feature_main_color_nypl</item>

  </style>

  <style
    name="SimplifiedTheme_Magic" parent="SimplifiedTheme">

    <item name="button_foreground">@color/feature_main_color</item>
    <item name="list_item_foreground">@color/feature_main_color</item>
    <item name="downloading_background">@color/feature_main_color</item>
    <item name="notification_background">@color/feature_main_color</item>
    <item name="main_color">@color/feature_main_color</item>

  </style>


  <style
    name="SimplifiedTheme_BPL" parent="SimplifiedTheme">

    <item name="button_foreground">@color/feature_main_color_bpl</item>
    <item name="list_item_foreground">@color/feature_main_color_bpl</item>
    <item name="downloading_background">@color/feature_main_color_bpl</item>
    <item name="notification_background">@color/feature_main_color_bpl</item>
    <item name="main_color">@color/feature_main_color_bpl</item>

  </style>

  <style
    name="SimplifiedTheme_MCPL" parent="SimplifiedTheme">

    <item name="button_foreground">@color/feature_main_color_mcpl</item>
    <item name="list_item_foreground">@color/feature_main_color_mcpl</item>
    <item name="downloading_background">@color/feature_main_color_mcpl</item>
