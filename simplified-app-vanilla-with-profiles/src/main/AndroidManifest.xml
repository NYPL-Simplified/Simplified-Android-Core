<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  package="org.nypl.simplified.vanilla.with_profiles"
  android:versionCode="4"
  android:versionName="1.0.3">

  <uses-sdk
    android:minSdkVersion="21"
    android:targetSdkVersion="28" />

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

  <uses-feature android:name="android.hardware.location.gps" />

  <application
    android:name="org.nypl.simplified.app.Simplified"
    android:allowBackup="true"
    android:contentDescription="VanillaProfiles"
    android:icon="@drawable/vanilla_icon"
    android:label="VanillaProfiles"
    android:largeHeap="true"
    android:theme="@style/SimplifiedBlank"
    android:usesCleartextTraffic="true">

    <!-- Main entry point for the application. -->
    <activity
      android:name="org.nypl.simplified.app.splash.SplashActivity"
      android:configChanges="orientation|screenSize"
      android:exported="true"
      android:contentDescription="Simplified Vanilla"
      android:label="Simplified Vanilla">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <!-- Main application parts -->
    <activity android:name="org.nypl.simplified.app.catalog.MainCatalogActivity"
      android:configChanges="orientation|screenSize"
      android:contentDescription="@string/catalog"
      android:exported="false"
      android:label="@string/catalog" />
    <activity android:name="org.nypl.simplified.app.catalog.MainBooksActivity"
      android:configChanges="orientation|screenSize"
      android:contentDescription="@string/catalog"
      android:exported="false"
      android:label="@string/catalog" />
    <activity android:name="org.nypl.simplified.app.catalog.MainHoldsActivity"
      android:configChanges="orientation|screenSize"
      android:contentDescription="@string/holds"
      android:exported="false"
      android:label="@string/holds" />

    <activity android:name="org.nypl.simplified.app.CardCreatorActivity"
      android:configChanges="orientation|screenSize"
      android:contentDescription="Card Creator"
      android:exported="false"
      android:label="Card Creator" />

    <activity android:name="org.nypl.simplified.app.profiles.ProfileCreationActivity"
      android:configChanges="orientation|screenSize"
      android:exported="false" />
    <activity android:name="org.nypl.simplified.app.profiles.ProfileSelectionActivity"
      android:configChanges="orientation|screenSize"
      android:exported="false" />

    <!-- Settings -->
    <activity
      android:name="org.nypl.simplified.app.settings.SettingsActivity"
      android:configChanges="orientation|screenSize"
      android:contentDescription="@string/settings"
      android:exported="false"
      android:label="@string/settings" />
    <activity
      android:name="org.nypl.simplified.app.settings.SettingsAccountActivity"
      android:configChanges="orientation|screenSize"
      android:contentDescription="@string/settings_account"
      android:exported="false"
      android:label="@string/settings_account" />
    <activity
      android:name="org.nypl.simplified.app.settings.SettingsAccountsActivity"
      android:configChanges="orientation|screenSize"
      android:contentDescription="@string/settings_accounts"
      android:exported="false"
      android:label="@string/settings_accounts" />
    <activity android:name="org.nypl.simplified.app.settings.SettingsVersionActivity"
      android:configChanges="orientation|screenSize"
      android:contentDescription="@string/versions_version"
      android:label="@string/versions_version"
      android:exported="false" />

    <activity android:name="org.nypl.simplified.app.helpstack.HelpActivity"
      android:configChanges="orientation|screenSize"
      android:contentDescription="@string/help"
      android:exported="false"
      android:label="@string/help" />

    <!-- General components -->
    <activity android:name="org.nypl.simplified.app.WebViewActivity"
      android:configChanges="orientation|screenSize"
      android:exported="false" />

    <!-- Catalog -->
    <activity android:name="org.nypl.simplified.app.catalog.CatalogBookDetailActivity"
      android:contentDescription="@string/catalog_book_detail"
      android:exported="false"
      android:label="@string/catalog_book_detail" />
    <activity android:name="org.nypl.simplified.app.catalog.CatalogBookReportActivity"
      android:contentDescription="@string/catalog_book_report"
      android:exported="false"
      android:label="@string/catalog_book_report" />

    <!-- Reader -->
    <activity android:name="org.nypl.simplified.app.reader.ReaderActivity"
      android:configChanges="orientation|screenSize"
      android:contentDescription="@string/reader"
      android:exported="false"
      android:label="@string/reader" />
    <activity android:name="org.nypl.simplified.app.reader.toc.ReaderTOCActivity"
      android:configChanges="orientation|screenSize"
      android:contentDescription="@string/reader_toc"
      android:exported="false"
      android:label="@string/reader_toc" />

    <!-- Audio book player -->
    <activity android:name="org.nypl.simplified.app.player.AudioBookPlayerActivity"
      android:configChanges="orientation|screenSize"
      android:contentDescription="@string/audio_book_player"
      android:exported="false"
      android:label="@string/audio_book_player" />

    <!-- HelpStack -->
    <activity
      android:name="com.tenmiles.helpstack.activities.HomeActivity"
      android:exported="false"
      android:label="@string/hs_help_title"
      tools:replace="android:label">
      <intent-filter>
        <action android:name="com.tenmiles.helpstack.ShowHelp" />
        <category android:name="android.intent.category.DEFAULT" />
      </intent-filter>
    </activity>
    <activity android:name="com.tenmiles.helpstack.activities.NewIssueActivity"
      android:contentDescription="@string/hs_issuebutton_title"
      android:label="@string/hs_issuebutton_title"
      android:windowSoftInputMode="adjustResize" />
    <activity android:name="com.tenmiles.helpstack.activities.NewUserActivity"
      android:windowSoftInputMode="adjustResize" />
    <activity android:name="com.tenmiles.helpstack.activities.IssueDetailActivity"
      android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
    <activity android:name="com.tenmiles.helpstack.activities.ArticleActivity" />
    <activity android:name="com.tenmiles.helpstack.activities.SectionActivity" />
    <activity android:name="com.tenmiles.helpstack.activities.ImageAttachmentDisplayActivity" />
    <activity android:name="com.tenmiles.helpstack.activities.EditAttachmentActivity"
      android:screenOrientation="portrait" />

    <activity android:name="org.nypl.simplified.app.ReportIssueActivity"
      android:contentDescription="@string/hs_issuebutton_title"
      android:label="@string/hs_issuebutton_title"
      android:windowSoftInputMode="adjustResize" />

    <receiver
      android:name="com.tenmiles.helpstack.service.AttachmentDownloadReceiver"
      android:enabled="true">
      <intent-filter>
        <action android:name="android.intent.action.DOWNLOAD_COMPLETE" />
        <action android:name="android.intent.action.DOWNLOAD_NOTIFICATION_CLICKED" />
        <category android:name="android.intent.category.DEFAULT" />
      </intent-filter>
    </receiver>

    <uses-library
      android:name="org.apache.http.legacy"
      android:required="false" />
  </application>

</manifest>
