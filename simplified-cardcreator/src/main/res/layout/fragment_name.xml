<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/WizardPageContainer">

  <TextView style="@style/WizardPageTitle"/>

  <TextView style="@style/WizardPageDescription"/>


  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">


      <TextView
        style="@style/WizardFormLabel"
        android:text="@string/label_firstname"/>

      <EditText
        android:id="@+id/firstname"
        style="@style/WizardFormEditText"
        android:inputType="text"/>

      <TextView
        style="@style/WizardFormLabel"
        android:text="@string/label_middletname"/>

      <EditText
        android:id="@+id/middlename"
        style="@style/WizardFormEditText"
        android:inputType="text"
        android:hint="Optional"/>

      <TextView
        style="@style/WizardFormLabel"
        android:text="@string/label_lastname"/>

      <EditText
        android:id="@+id/lastname"
        style="@style/WizardFormEditText"
        android:inputType="text"/>

      <TextView
        style="@style/WizardFormLabel"
        android:text="@string/label_email"/>

      <EditText
        android:id="@+id/email"
        style="@style/WizardFormEditText"
        android:inputType="textEmailAddress"/>

    </LinearLayout>
  </ScrollView>

  <TextView style="@style/WizardPageFooter"/>

</LinearLayout>