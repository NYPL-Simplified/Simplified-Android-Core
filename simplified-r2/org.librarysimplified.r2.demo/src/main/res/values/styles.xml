<?xml version="1.0" encoding="UTF-8" ?>

<resources>
  <color name="demoColorPrimaryLight">#5472d3</color>
  <color name="demoColorPrimary">#0d47a1</color>
  <color name="demoColorPrimaryDark">#002171</color>
  <color name="demoColorDisabled">#dddddd</color>
  <color name="demoColorBackground">#ffffff</color>

  <style name="DemoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/demoColorPrimary</item>
    <item name="colorPrimaryDark">@color/demoColorPrimaryDark</item>
    <item name="colorAccent">@color/demoColorPrimaryLight</item>
    <item name="android:colorPrimary">@color/demoColorPrimary</item>
    <item name="android:colorPrimaryDark">@color/demoColorPrimaryDark</item>
    <item name="android:colorAccent">@color/demoColorPrimaryLight</item>
  </style>

  <style name="DemoToolBarStyle" parent="Widget.AppCompat.Toolbar">
    <item name="titleTextAppearance">@style/DemoTitleTextAppearance</item>
    <item name="subtitleTextAppearance">@style/DemoSubTitleTextAppearance</item>
  </style>

  <style name="DemoTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textColor">#ffffff</item>
  </style>

  <style name="DemoSubTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
    <item name="android:textSize">11sp</item>
  </style>
</resources>
