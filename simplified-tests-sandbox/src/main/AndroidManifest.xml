<?xml version="1.0" encoding="UTF-8" ?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="org.nypl.simplified.tests.sandbox"
  android:versionCode="1"
  android:versionName="0.0.1">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application android:allowBackup="false"
    android:label="SimplifiedSandbox"
    android:icon="@drawable/sandbox">

    <activity
      android:name="org.nypl.simplified.tests.sandbox.StyledActivity"
      android:theme="@style/SimplifiedBlank"
      android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
      android:name="org.nypl.simplified.tests.sandbox.SplashActivity"
      android:theme="@style/SimplifiedTheme_ActionBar_Blue"
      android:exported="true"/>

    <activity
      android:name="org.nypl.simplified.tests.sandbox.ErrorPageActivity"
      android:theme="@style/SimplifiedTheme_ActionBar_DeepPurple"
      android:exported="true"/>
  </application>

</manifest>
