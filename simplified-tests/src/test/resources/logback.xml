<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

  <appender
    name="STDERR"
    class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-5level %logger{128}: %msg%n
      </pattern>
    </encoder>
    <target>System.err</target>
  </appender>

  <root level="DEBUG">
    <appender-ref ref="STDERR" />
  </root>

</configuration>
