<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/authBasic"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:paddingStart="16dp"
  android:paddingEnd="16dp">

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/authBasicUserLabel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/accountUserName"
    android:visibility="gone"
    tools:visibility="visible">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/authBasicUserField"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="text" />
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/authBasicPassLabel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:hint="@string/accountPassword"
    android:visibility="gone"
    tools:visibility="visible">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/authBasicPassField"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:imeOptions="actionDone"
      android:inputType="textPassword" />
  </com.google.android.material.textfield.TextInputLayout>

  <CheckBox
    android:id="@+id/authBasicShowPass"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="@string/accountPasswordShow"
    android:visibility="gone"
    tools:text="Show password"
    tools:visibility="visible" />

  <Button
    android:id="@+id/authBasicLogin"
    android:layout_width="256dp"
    android:layout_height="48dp"
    android:layout_gravity="center"
    android:layout_marginTop="32dp"
    android:layout_marginBottom="16dp"
    android:text="@string/accountLogin" />
</LinearLayout>
