<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/bookCellCorrupt"
  android:layout_width="match_parent"
  android:layout_height="@dimen/catalogFeedCellHeight"
  android:background="?attr/simplifiedColorPrimaryDark">

  <ImageView
    android:id="@+id/bookCellCorruptIcon"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:contentDescription="@string/catalogCorrupted"
    android:src="@drawable/corrupted"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/bookCellCorruptText"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="16dp"
    android:text="@string/catalogCorrupted"
    android:textColor="?attr/simplifiedColorBackground"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/bookCellCorruptIcon"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>