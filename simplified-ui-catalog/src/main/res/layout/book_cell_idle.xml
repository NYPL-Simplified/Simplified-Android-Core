<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/bookCellIdle"
  android:layout_width="match_parent"
  android:layout_height="@dimen/catalogFeedCellHeight">

  <ImageView
    android:id="@+id/bookCellCover"
    android:layout_width="@dimen/catalogFeedCellImageWidth"
    android:layout_height="@dimen/catalogFeedCellHeight"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ProgressBar
    android:id="@+id/bookCellCoverProgress"
    style="?android:attr/progressBarStyle"
    android:layout_width="32dp"
    android:layout_height="32dp"
    app:layout_constraintBottom_toBottomOf="@id/bookCellCover"
    app:layout_constraintEnd_toEndOf="@id/bookCellCover"
    app:layout_constraintStart_toStartOf="@id/bookCellCover"
    app:layout_constraintTop_toTopOf="@id/bookCellCover" />

  <TextView
    android:id="@+id/bookCellTitle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:ellipsize="end"
    android:maxLines="1"
    android:text="@string/catalogPlaceholder"
    android:textSize="14sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/bookCellCover"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>