<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:scrollbarAlwaysDrawHorizontalTrack="true">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:id="@+id/settingsVersionBuildTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:text="@string/settingsVersionBuild"
      android:textSize="24sp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/settingsVersionBuild"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:fontFamily="monospace"
      android:text="0c40e0a2c5936a90a29989252eb34c67cdf3876e" />

    <TextView
      android:id="@+id/settingsVersionVersionTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:text="@string/settingsVersionVersion"
      android:textSize="24sp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/settingsVersionVersion"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:fontFamily="monospace"
      android:text="1.0.0 (2000)" />

    <LinearLayout
      android:id="@+id/settingsVersionDev"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:orientation="vertical">

      <TextView
        android:id="@+id/settingsVersionDevTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settingsVersionDeveloper"
        android:layout_marginBottom="16dp"
        android:textSize="24sp"
        android:textStyle="bold" />

      <Button
        android:id="@+id/settingsVersionDevCrash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Crash" />

      <Button
        android:id="@+id/settingsVersionDevShowCacheDir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Show Cache Directory" />

      <Button
        android:id="@+id/settingsVersionDevSendReports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Send Error Logs" />

      <Button
        android:id="@+id/settingsVersionDevShowError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Show Error Page" />

      <Button
        android:id="@+id/settingsVersionDevSyncAnalytics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Send Analytics" />

      <Button
        android:id="@+id/settingsVersionDevSyncAccounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Sync Accounts" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="DRM Support"
        android:textSize="24sp"
        android:textStyle="bold" />

      <TableLayout
        android:id="@+id/settingsVersionDrmSupport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"></TableLayout>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Adobe DRM Activations"
        android:textSize="14sp"
        android:textStyle="bold" />

      <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical|horizontal">

        <TableLayout
          android:id="@+id/settingsVersionDrmAdobeActivations"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TableRow>

            <TextView android:text="Placeholder" />

            <TextView android:text="Placeholder" />

            <TextView android:text="Placeholder" />

            <TextView android:text="Placeholder" />

            <TextView android:text="Placeholder" />
          </TableRow>
        </TableLayout>
      </HorizontalScrollView>

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Testing Features"
        android:textSize="24sp"
        android:textStyle="bold" />

      <Switch
        android:id="@+id/settingsVersionDevProductionLibrariesSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:checked="false"
        android:enabled="true"
        android:text="Show non-production libraries" />

      <Switch
        android:id="@+id/settingsVersionDevFailNextBootSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:checked="false"
        android:enabled="true"
        android:text="Cause the next application startup to fail" />

      <Switch
        android:id="@+id/settingsVersionDevSeenLibrarySelectionScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:checked="false"
        android:enabled="true"
        android:text="User has seen library selection screen?" />

      <Button
        android:id="@+id/settingsVersionDevCustomOPDS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Add Custom OPDS Feed" />

    </LinearLayout>
  </LinearLayout>

</ScrollView>
