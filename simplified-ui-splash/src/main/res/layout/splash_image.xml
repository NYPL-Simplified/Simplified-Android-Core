<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ProgressBar
    android:id="@+id/splashProgress"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="128dp"
    android:layout_height="32dp"
    android:indeterminate="true"
    android:layout_centerInParent="true" />

  <TextView
    android:id="@+id/splashText"
    android:layout_width="256dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_below="@id/splashProgress"
    android:layout_margin="16dp"
    android:gravity="center"
    android:maxLines="3"
    android:ellipsize="end"
    android:text="Loading loading loading..." />

  <ImageView
    android:id="@+id/splashImage"
    android:layout_width="240dp"
    android:layout_height="240dp"
    android:layout_centerInParent="true" />

  <ImageView
    android:id="@+id/splashImageError"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginBottom="16dp"
    android:layout_centerInParent="true"
    android:layout_above="@id/splashProgress"
    app:srcCompat="@drawable/migration_error" />

</RelativeLayout>
