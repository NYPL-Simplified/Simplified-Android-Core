<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_enabled="false">
    <shape android:shape="rectangle">
      <padding
        android:left="?attr/simplifiedButtonHorizontalPadding"
        android:top="?attr/simplifiedButtonVerticalPadding"
        android:right="?attr/simplifiedButtonHorizontalPadding"
        android:bottom="?attr/simplifiedButtonVerticalPadding" />
      <corners android:radius="?attr/simplifiedButtonCornerRadius" />
      <solid android:color="?attr/simplifiedColorBackground" />
      <stroke
        android:width="1dp"
        android:color="@color/simplifiedColorDisabledAccessibility" />
    </shape>
  </item>

  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <padding
        android:left="?attr/simplifiedButtonHorizontalPadding"
        android:top="?attr/simplifiedButtonVerticalPadding"
        android:right="?attr/simplifiedButtonHorizontalPadding"
        android:bottom="?attr/simplifiedButtonVerticalPadding" />
      <corners android:radius="?attr/simplifiedButtonCornerRadius" />
      <solid android:color="?attr/simplifiedColorPrimary" />
      <stroke
        android:width="1dp"
        android:color="?attr/simplifiedColorBackground" />
    </shape>
  </item>

  <item android:state_focused="true">
    <shape android:shape="rectangle">
      <padding
        android:left="?attr/simplifiedButtonHorizontalPadding"
        android:top="?attr/simplifiedButtonVerticalPadding"
        android:right="?attr/simplifiedButtonHorizontalPadding"
        android:bottom="?attr/simplifiedButtonVerticalPadding" />
      <corners android:radius="?attr/simplifiedButtonCornerRadius" />
      <solid android:color="?attr/simplifiedColorBackground" />
      <stroke
        android:width="1dp"
        android:color="?attr/simplifiedColorPrimary" />
    </shape>
  </item>

  <item>
    <shape android:shape="rectangle">
      <padding
        android:left="?attr/simplifiedButtonHorizontalPadding"
        android:top="?attr/simplifiedButtonVerticalPadding"
        android:right="?attr/simplifiedButtonHorizontalPadding"
        android:bottom="?attr/simplifiedButtonVerticalPadding" />
      <corners android:radius="?attr/simplifiedButtonCornerRadius" />
      <solid android:color="?attr/simplifiedColorBackground" />
      <stroke
        android:width="1dp"
        android:color="?attr/simplifiedColorPrimary" />
    </shape>
  </item>

</selector>
