<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--
    The default theme that has no action bar.
  -->

  <style name="SimplifiedTheme.NoActionBar" parent="SimplifiedTheme.NoActionBar.Base">
    <item name="simplifiedColorPrimary">@color/simplified_material_dark_grey_primary</item>
    <item name="simplifiedColorPrimaryLight">@color/simplified_material_dark_grey_primary_light</item>
    <item name="simplifiedColorPrimaryDark">@color/simplified_material_dark_grey_primary_dark</item>

    <item name="simplifiedColorControlActivated">?attr/simplifiedColorText</item>
    <item name="simplifiedColorBackground">@color/almost_black</item>
    <item name="simplifiedColorItemBackground">@color/lighter_black</item>
    <item name="simplifiedColorItemStroke">@color/morado_gray</item>
    <item name="simplifiedColorDisabledAccessibility">@color/accessibility_grey</item>

    <item name="simplifiedColorNavigationSelected">?attr/simplifiedColorText</item>"
    <item name="simplifiedColorNavigationUnselected">@color/white</item>"

    <item name="simplifiedColorBookStatus">@color/lighter_gray</item>
    <item name="simplifiedColorSegmentedControlBackground">@color/simplified_segmented_control_background</item>
    <item name="simplifiedColorSegmentedControlStroke">?attr/simplifiedColorSegmentedControlBackground</item>

    <item name="simplifiedColorText">@color/blue</item>
    <item name="simplifiedColorPreferenceCategory">?attr/simplifiedColorText</item>
    <item name="simplifiedColorControlActionBar">?attr/simplifiedColorText</item>
  </style>

  <!--
    The default theme that has an action bar.
  -->

  <style name="SimplifiedTheme.ActionBar" parent="SimplifiedTheme.ActionBar.Base">
    <item name="simplifiedColorPrimary">@color/simplified_material_dark_grey_primary</item>
    <item name="simplifiedColorPrimaryLight">@color/simplified_material_dark_grey_primary_light</item>
    <item name="simplifiedColorPrimaryDark">@color/simplified_material_dark_grey_primary_dark</item>

    <item name="simplifiedColorControlActivated">?attr/simplifiedColorText</item>
    <item name="simplifiedColorBackground">@color/almost_black</item>
    <item name="simplifiedColorItemBackground">@color/lighter_black</item>
    <item name="simplifiedColorItemStroke">@color/morado_gray</item>
    <item name="simplifiedColorDisabledAccessibility">@color/accessibility_grey</item>

    <item name="simplifiedColorNavigationSelected">?attr/simplifiedColorText</item>"
    <item name="simplifiedColorNavigationUnselected">@color/white</item>"

    <item name="simplifiedColorBookStatus">@color/lighter_gray</item>
    <item name="simplifiedColorSegmentedControlBackground">@color/simplified_segmented_control_background</item>
    <item name="simplifiedColorSegmentedControlStroke">?attr/simplifiedColorSegmentedControlBackground</item>

    <item name="simplifiedColorText">@color/blue</item>
    <item name="simplifiedColorPreferenceCategory">?attr/simplifiedColorText</item>
    <item name="simplifiedColorControlActionBar">?attr/simplifiedColorText</item>
  </style>

</resources>