<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--
    The default theme that has no action bar.
  -->

  <style name="SimplifiedTheme.NoActionBar" parent="SimplifiedTheme.NoActionBar.Base">
    <item name="simplifiedColorPrimary">@color/simplified_material_indigo_primary</item>
    <item name="simplifiedColorPrimaryLight">@color/simplified_material_indigo_primary_light</item>
    <item name="simplifiedColorPrimaryDark">@color/simplified_material_indigo_primary_dark</item>

    <item name="simplifiedColorControlActivated">?attr/simplifiedColorPrimary</item>
    <item name="simplifiedColorBackground">@color/white</item>
    <item name="simplifiedColorItemBackground">@color/white</item>
    <item name="simplifiedColorItemStroke">@color/yet_another_gray</item>
    <item name="simplifiedColorDisabled">@color/platinum</item>

    <item name="simplifiedColorNavigationSelected">?attr/simplifiedColorPrimary</item>
    <item name="simplifiedColorNavigationUnselected">@color/dkgray</item>

    <item name="simplifiedColorBookStatus">?attr/simplifiedColorPrimary</item>
    <item name="simplifiedColorSegmentedControlBackground">@color/simplified_segmented_control_background</item>
    <item name="simplifiedColorSegmentedControlStroke">?attr/simplifiedColorPrimary</item>

    <item name="simplifiedColorText">?attr/simplifiedColorPrimaryDark</item>
    <item name="simplifiedColorPreferenceCategory">?attr/simplifiedColorPrimary</item>
    <item name="simplifiedColorControlActionBar">@color/white</item>
  </style>

  <!--
    The default theme that has an action bar.
  -->

  <style name="SimplifiedTheme.ActionBar" parent="SimplifiedTheme.ActionBar.Base">
    <item name="simplifiedColorPrimary">@color/simplified_material_indigo_primary</item>
    <item name="simplifiedColorPrimaryLight">@color/simplified_material_indigo_primary_light</item>
    <item name="simplifiedColorPrimaryDark">@color/simplified_material_indigo_primary_dark</item>

    <item name="simplifiedColorControlActivated">?attr/simplifiedColorPrimary</item>
    <item name="simplifiedColorBackground">@color/white</item>
    <item name="simplifiedColorItemBackground">@color/white</item>
    <item name="simplifiedColorItemStroke">@color/yet_another_gray</item>
    <item name="simplifiedColorDisabled">@color/platinum</item>

    <item name="simplifiedColorNavigationSelected">?attr/simplifiedColorPrimary</item>
    <item name="simplifiedColorNavigationUnselected">@color/dkgray</item>

    <item name="simplifiedColorBookStatus">?attr/simplifiedColorPrimary</item>
    <item name="simplifiedColorSegmentedControlBackground">@color/simplified_segmented_control_background</item>
    <item name="simplifiedColorSegmentedControlStroke">?attr/simplifiedColorPrimary</item>

    <item name="simplifiedColorText">?attr/simplifiedColorPrimaryDark</item>
    <item name="simplifiedColorPreferenceCategory">?attr/simplifiedColorPrimary</item>
    <item name="simplifiedColorControlActionBar">@color/white</item>
  </style>

</resources>