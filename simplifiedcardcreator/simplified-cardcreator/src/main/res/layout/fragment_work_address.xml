<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/WizardPageContainer">

  <TextView style="@style/WizardPageTitle"/>

  <TextView style="@style/WizardPageDescription"/>


  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">


      <TextView
        style="@style/WizardFormLabel"
        android:text="@string/label_street1"/>

      <EditText
        android:id="@+id/street1"
        style="@style/WizardFormEditText"/>

      <TextView
        style="@style/WizardFormLabel"
        android:text="@string/label_street2"/>

      <EditText
        android:id="@+id/street2"
        style="@style/WizardFormEditText"
        android:hint="Optional"/>

      <TextView
        style="@style/WizardFormLabel"
        android:text="@string/label_city"/>

      <EditText
        android:id="@+id/city"
        style="@style/WizardFormEditText"/>


      <TextView
        style="@style/WizardFormLabel"
        android:text="@string/label_region"/>

      <EditText
        android:id="@+id/region"
        style="@style/WizardFormEditText"/>

      <TextView
        style="@style/WizardFormLabel"
        android:text="@string/label_zip"/>

      <EditText
        android:id="@+id/zip"
        style="@style/WizardFormEditText"
        android:inputType="number"/>

    </LinearLayout>
  </ScrollView>

  <TextView style="@style/WizardPageFooter"/>

</LinearLayout>
